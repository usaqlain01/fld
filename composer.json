{
    "require-dev": {
        "symfony/console": "~2.4",
        "symfony/debug": "~2.4",
        "symfony/finder": "~2.4",
        "symfony/filesystem": "~2.4",
        "symfony/var-dumper": "~2.6",
        "pimple/pimple": "~3.0",
        "cilex/console-service-provider": "~2.0@dev",
        "bangpound/assetic-cli": "~1.1@dev",
        "bangpound/assetic-service-provider": "~1.0@dev",
        "zacoza/assetic-filters": "dev-master",
        "bangpound/assetic-codekit": "1.0.*@dev"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "prefer-stable": true,
    "config": {
        "autoloader-suffix": "Repo",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "rvm": [
            "rvm use ruby-2.2.2@fldmuse"
        ],
        "sync": [
            "/usr/local/bin/drush --root=docroot sql-sync @fldmuse.prod @self",
            "/usr/local/bin/drush --root=docroot rsync @fldmuse.prod:%files @self:%files -Pv"
        ],
        "drush:composer": [
            "drush --root=docroot composer-json-rebuild",
            "drush --root=docroot composer-manager update"
        ],
        "assetic": [
            "./bin/assetic prepare",
            "./bin/assetic dump"
        ],
        "theme:build": [
            "composer rvm",
            "composer assetic",
            "compass compile -e production -s compact --force docroot/profiles/fieldmuseum/themes/esquif"
        ]
    }
}
